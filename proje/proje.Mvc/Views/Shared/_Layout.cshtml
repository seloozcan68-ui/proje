<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - İş Başvuru Platformu</title>

    <!-- Bootstrap CSS (kütüphane) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-light">

    <!-- NAVBAR (menüler ve site üst kısmı) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">

            <a class="navbar-brand fw-bold" href="/">İş Başvuru Platformu</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="/JobPostings">İlanlar</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Companies">Şirketler</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Candidates">Adaylar</a>
                    </li>

                </ul>
            </div>

        </div>
    </nav>

    <!-- ANA İÇERİK (hangi sayfayı açarsak açalım o sayfanın içeriği burda görülür) -->
    <div class="container mt-4">
        @RenderBody()
    </div>


    <!-- FOOTER (sayfanın en altında mavi çubuk)-->
    <footer class="bg-primary text-white text-center py-3 mt-5">
        <p class="mb-0">© @DateTime.Now.Year İş Başvuru Platformu</p>
    </footer>


    <!-- Bootstrap JS (dinamik özellikler için gerekli) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>  <!-- Tüm sayfaların ortak şablonu -->